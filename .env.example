# =============================================
# Kilo Code - Template Automático e Não Invasivo
# =============================================
# Este arquivo contém todas as variáveis necessárias
# Valores marcados como [OBRIGATÓRIO] devem ser preenchidos

# =============================================
# Busca Semântica - Configurações Principais
# =============================================
QDRANT_URL=http://localhost:6333
OLLAMA_URL=http://localhost:11434
EMBED_MODEL=bge-m3
QDRANT_COLLECTION=  # [OBRIGATÓRIO] Nome único para sua collection
EMBED_PAYLOAD=auto
INDEX_ROOT=.
BATCH=64
CHUNK_SIZE=1200
CHUNK_OVERLAP=200
MAX_FILE_MB=1.5
MAX_CHARS_FILE=200000
SEARCH_LIMIT=8
WITH_SNIPPET=1

# =============================================
# Configurações do Servidor
# =============================================
KILO_ENV=development
KILO_PORT=3000
KILO_MAX_WORKERS=4
KILO_MEMORY_LIMIT=2GB
AUTO_SCALE=false
NODE_ENV=development

# =============================================
# Banco de Dados - [OBRIGATÓRIO para produção]
# =============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=  # [OBRIGATÓRIO]
DB_PASSWORD=  # [OBRIGATÓRIO]
DB_NAME=  # [OBRIGATÓRIO]
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=60000
DB_CONNECTION_TIMEOUT=30000
DB_BATCH_SIZE=1000
DB_INDEXES=

# =============================================
# Cache - Configurações
# =============================================
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# =============================================
# Segurança - [OBRIGATÓRIO para produção]
# =============================================
JWT_SECRET=  # [OBRIGATÓRIO] Chave secreta JWT
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=  # [OBRIGATÓRIO] Chave de criptografia
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# =============================================
# Logging
# =============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# =============================================
# Sistema de Arquivos
# =============================================
IGNORE_DIRS=.git,.github,.next,node_modules,dist,build,.turbo,.vercel,.cache,coverage
IGNORE_PATHS=
MAX_DEPTH=8

# =============================================
# Performance
# =============================================
ONLY_N=0
MAX_WORKERS=4
MEMORY_LIMIT=2GB